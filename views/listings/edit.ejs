<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
<body> 
    <h3>Edit your form </h3>
    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT"
        novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" >Title</label> 
            <input name="listing[title]" value ="<%= listing.title %>"
             type="text" placeholder="enter your title"
              id="" class="form-control" required> 
              <div class="invalid-feedback">Enter Title </div>
            <br> <br>
        </div>

        <div class="mb-3" class="form-control">
            <label for="price" >Price</label>
            <input name="listing[price]"
            value ="<%= listing.price %>"
            type="text" placeholder="enter your price" 
            id="" class="form-control" required> 
            <div class="invalid-feedback">Enter Price </div>
            <br><br>
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <input name="listing[description]" 
            value ="<%= listing.description %>" 
            placeholder="enter your description"  id="" 
            class="form-control" required> 
            <div class="invalid-feedback">Enter Description </div>
            <br><br>
        </div>
        <div class="mb-3">      
            <label for="location"> Location</label>
            <input name="listing[location]"
             value ="<%= listing.location %>"
              placeholder="enter your location" class="form-control"required > 
              <div class="invalid-feedback">Enter Location </div>
            <br><br>
        </div>
        <div class="mb-3">
            <label for="country"> Country</label>
            <input name="listing[country]"
             value ="<%= listing.country %>"
             placeholder="enter your country" class="form-control" required> 
             <div class="invalid-feedback">Enter Country </div>
            <br><br>
        </div>
        <div class="mb-3">
            <label for="image" >New Image</label>
            <input name="listing[image]"
            class="form-control"
            type="file"> 
            <br><br>
        </div>
        <button class="btn btn-dark edit-btn">Edit</button>
    </form>
</body>


</div>
</div>

<script src="/js/script.js"></script>