<% layout("/layouts/boilerplate")%>
<br><br>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <form method ="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <h1>Create new Listing</h1>

        <div  class ="mb-3">   <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" placeholder="enter your title"  class="form-control " required> 
        <div class="invalid-feedback">Enter Title </div>
        </div>
        <br> <br>
        <div>
        <div class ="mb-3"> <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"  placeholder="enter your description" type = "text" class="form-control" required > </textarea>
            <div class="invalid-feedback">Enter Description </div>
            <br><br>
        </div>

            <div class ="mb-3">
            <label for=" image" class="form-control">Upload image</label>
            <input name="listing[image]" type="file" class="form-control" > 
    <br><br> </div>


    <div class="row">
        <div  class ="mb-3 col-4 mid-4">
         <label for="price" class="form-label">Price</label>
        <input name="listing[price]" type="text" placeholder="1000"  class="form-control" required> 
        <div class="invalid-feedback">Price should be valid</div>
    </div>
    <br><br>
      
    <div class ="mb-3 col-8 mid-8">
        <label for="country" class="form-label">Country</label> <br>
       <input name="listing[country]" placeholder="India" class="form-control" required> 
       <div class="invalid-feedback">Enter Country </div>
       <br><br> 
   </div>

</div>
       <div class ="mb-3"> 
        <label for="location" class="form-label">location</label>
        <input name="listing[location]" placeholder="enter your location" class="form-control" required > 
        <div class="invalid-feedback">Enter Location </div>
        <br><br>
    </div>   <br><br>
         <button class="btn btn-outline-danger">Add</button> <br><br>
    </form>

</body>
</div>
</div>