<% layout("/layouts/boilerplate") %> 
<!-- Font Awesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
  /* Container for all filters */
  .filters {
    display: flex;
    flex-direction: row;
    gap: 1.5rem;
    overflow-x: auto;
    padding: 1rem;
    white-space: nowrap;
    scrollbar-width: none; /* Firefox */
  }

 

  /* Individual filter item */
  .filter-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
    padding: 10px;
    border-radius: 15px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    color: #444;
  }

  .filter-item:hover {
    background-color: #f5f5f5;
    transform: scale(1.2);
    color: #000;
  }
  .filter-item p {
    font-size: 0.9rem;
    margin: 0;
  }
  .tax-toggle{
    margin-top: 5px;
    margin-left: 75%;
    border-radius:1px solid black;
    display: inline;
    border-radius: 25px;
    height: 3rem;
  }
  .tax-info{
    display: none;
  }
</style>

<div class="filters">
  <div class="filter-item"><i class="fa-solid fa-house"></i></a><p>Home</p></div>
  <div class="filter-item"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
  <div class="filter-item"><i class="fa-solid fa-tree"></i><p>Cabins</p></div>
  <div class="filter-item"><i class="fa-solid fa-umbrella-beach"></i><p>Beach</p></div>
  <div class="filter-item"><i class="fa-solid fa-city"></i><p>City</p></div>
  <div class="filter-item"><i class="fa-solid fa-mountain"></i><p>Mountain</p></div>
  <div class="filter-item"><i class="fa-solid fa-gem"></i><p>Luxury</p></div>
  <div class="filter-item"><i class="fa-solid fa-landmark"></i><p>Historic</p></div>
  <div class="filter-item"><i class="fa-solid fa-seedling"></i><p>Countryside</p></div>
  <div class="filter-item"><i class="fa-solid fa-water-ladder"></i><p>Pools</p></div>
  <div class="filter-item"><i class="fa-solid fa-paw"></i><p>Pet Friendly</p></div>
</div>

  <div class="tax-toggle" id="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input type="checkbox"
      role="switch"
      class="form-check-input"
      id="flexSwitchchecheckedDefault">
      <label for="flexSwitchchecheckedDefault" 
      class="form-check-label">Display total after taxes
      </label>
    </div>
  </div>


  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3 g-4">
    <% for (let listing of allListings) { %>
      <div class="col">
        <div class="card listing-card">
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <img src="<%= listing.image.url %>" style="height:20rem" class="card-img-top" alt="listing image">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %>/night 
                <i class="tax-info"> &nbsp; &nbsp; +18 GST</i> <br>
              </p>
            </div>
          </a>
        </div>
      </div>
    <% } %>
  </div>
</body>


<script>
  let tax = document.getElementById("flexSwitchchecheckedDefault");
  tax.addEventListener("click",()=>{
    let taxinfo = document.querySelectorAll(".tax-info");
  for(info of taxinfo){
    if(info.style.display != "inline"){
      info.style.display = "inline"
    }else{
        info.style.display = "none"
    }
  }
  });
</script>